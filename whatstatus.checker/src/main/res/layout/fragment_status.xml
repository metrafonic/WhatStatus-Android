<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.metrafonicnic.whatstatus.checker.MainActivity$PlaceholderFragment"
    android:background="#343434">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/imageView"
        android:gravity="center">

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/logo"
            android:layout_weight="3" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:padding="10dp">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="35dp"
                    android:id="@+id/imageViewSite"
                    android:layout_weight="0"
                    android:paddingRight="9dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Site - what.cd"
                    android:id="@+id/textView"
                    android:layout_weight="1"
                    android:gravity="center_vertical" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/textViewSite"
                    android:gravity="center_vertical|right" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/tableRow"
                android:padding="10dp">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="35dp"
                    android:id="@+id/imageViewTracker"
                    android:layout_weight="0"
                    android:paddingRight="9dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Tracker - tracker.what.cd"
                    android:id="@+id/textView3"
                    android:layout_weight="1"
                    android:gravity="center_vertical" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/textViewTracker"
                    android:gravity="center_vertical|right" />
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/tableRow2"
                android:padding="10dp">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="35dp"
                    android:id="@+id/imageViewIRC"
                    android:layout_weight="0"
                    android:paddingRight="9dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="IRC - irc.what-network.net"
                    android:id="@+id/textView5"
                    android:layout_weight="1"
                    android:gravity="center_vertical" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:id="@+id/textViewIRC"
                    android:gravity="center_vertical|right"
                    android:layout_weight="1" />
            </TableRow>
        </TableLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="More Stats"
            android:id="@+id/buttonMoreStats"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:visibility="gone" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/progressBar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="This application and the whatstatus.info website is unofficial and is not affiliated with What.CD."
            android:id="@+id/textView2"
            android:gravity="center_horizontal" />
    </LinearLayout>

</RelativeLayout>
