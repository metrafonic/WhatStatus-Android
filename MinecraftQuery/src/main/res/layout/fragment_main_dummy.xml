<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity$DummySectionFragment">

    <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:baselineAligned="false"
            android:id="@+id/tableLayout"
            android:layout_weight="1">

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#B0C0E0">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:padding="6dp"
                        android:gravity="center_vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Server Name:"
                            android:id="@+id/textView"
                            android:textSize="12dp"
                            android:textIsSelectable="false"/>

                    <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/editText2"
                            android:layout_weight="1"
                            android:visibility="invisible"/>

                    <ScrollView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/scrollView4">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:id="@+id/serverTextView"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:textIsSelectable="false"
                                android:textStyle="bold"
                                android:textSize="14dp"/>
                    </ScrollView>
                </TableRow>

                <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="6dp"
                        android:gravity="center_vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Map Name:"
                            android:id="@+id/textView5"
                            android:textSize="12dp"
                            android:textIsSelectable="false"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:id="@+id/mapNameTextView"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:textSize="12dp"
                            android:textIsSelectable="false"/>
                </TableRow>

                <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:padding="6dp"
                        android:gravity="center_vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Game Mode:"
                            android:id="@+id/textView3"
                            android:textSize="12dp"
                            android:textIsSelectable="false"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:id="@+id/modeTextView"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:textSize="12dp"
                            android:textIsSelectable="false"/>
                </TableRow>

                <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:padding="6dp"
                        android:gravity="center_vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Max Players:"
                            android:id="@+id/textView2"
                            android:textSize="12dp"
                            android:textIsSelectable="false"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:id="@+id/maxPlayersTextView"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:textSize="12dp"
                            android:textIsSelectable="false"/>
                </TableRow>

                <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:padding="6dp"
                        android:gravity="center_vertical">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Online Players:"
                            android:id="@+id/textView7"
                            android:textSize="12dp"
                            android:textIsSelectable="false"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:id="@+id/onlinePlayersTextView"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:textSize="12dp"
                            android:textIsSelectable="false"/>
                </TableRow>

                <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:padding="6dp"
                        android:gravity="center_vertical"
                        android:id="@+id/tableRow">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Game ID:"
                            android:id="@+id/textView6"
                            android:textSize="12dp"
                            android:textIsSelectable="false"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:id="@+id/textViewGameId"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:textSize="12dp"
                            android:textIsSelectable="false"/>
                </TableRow>

                <TableRow
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:padding="6dp"
                        android:gravity="center_vertical"
                        android:id="@+id/tableRow2">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Version:"
                            android:id="@+id/textView9"
                            android:textSize="12dp"
                            android:textIsSelectable="false"
                            android:singleLine="false"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:id="@+id/textViewVersion"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:textSize="12dp"
                            android:textIsSelectable="false"/>
                </TableRow>
            </LinearLayout>
        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="visible"
                android:paddingTop="14dp">

        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#D1D0CE"
                android:paddingTop="5dp"
                android:layout_weight="1">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                <TableLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent">

                    <TableRow
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="1">

                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Plugins:"
                                android:id="@+id/textView8"
                                android:textSize="12dp"
                                android:textIsSelectable="false"
                                android:singleLine="false"
                                android:gravity="center_vertical"
                                android:paddingRight="15dp"
                                android:paddingLeft="7dp"/>

                        <ScrollView
                                android:layout_width="wrap_content"
                                android:layout_height="100dp"
                                android:id="@+id/scrollView3"
                                android:layout_weight="1">

                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceMedium"
                                    android:id="@+id/textViewPlugins"
                                    android:layout_weight="1"
                                    android:textSize="12dp"
                                    android:textIsSelectable="false"/>
                        </ScrollView>
                    </TableRow>
                </TableLayout>
            </LinearLayout>
        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1000000"
                android:visibility="gone">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:paddingTop="17dp">

                <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/scrollView"
                        android:layout_weight="1"
                        android:background="#000000"
                        android:freezesText="true"
                        android:minHeight="500dp">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:id="@+id/textView4"
                            android:layout_weight="1"
                            android:textColor="#00FF00"
                            android:paddingLeft="10dp"/>
                </ScrollView>

                <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/editText"
                        android:visibility="gone"/>
            </LinearLayout>
        </TableRow>

        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="visible"
                android:paddingTop="14dp"
                android:id="@+id/tableRow3"/>

        <TableRow
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="#b0c0e0">

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1">

                <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:text="View Player List"
                        android:id="@+id/buttonViewPlayerList"
                        android:layout_weight="1"
                        android:textSize="14dp"
                        android:visibility="visible"/>

                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:text="Refresh Query"
                        android:id="@+id/buttonQuery"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:textSize="14dp"/>
            </LinearLayout>
        </TableRow>
    </TableLayout>
</RelativeLayout>
